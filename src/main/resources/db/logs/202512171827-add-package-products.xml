<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="Luca Fruzza" id="202512171827">
        <comment>Create package products table.</comment>
        <createTable tableName="package_products">
            <column name="package_id" type="INTEGER">
                <constraints primaryKey="true" nullable="false" foreignKeyName="fk_package_product" references="packages(id)"/>
            </column>
            <column name="product_id" type="VARCHAR(128)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>